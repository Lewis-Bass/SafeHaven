@using Microsoft.AspNetCore.Hosting
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Http.Features
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options

@inject IHostingEnvironment Env
@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions

<!doctype html>
<html lang="en">
<head>
    @if (!User.Identity.IsAuthenticated && !Env.IsDevelopment())
    {
        <!-- Insert Google Analytics here -->
    }
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - WebSiteCustomer</title>


    @*<link rel="stylesheet" href="~/assets/css/style.min.css">*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Bitter:700|Open+Sans:300,400,600">
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <link rel="stylesheet" href="~/assets/css/style.css">

    <title>@ViewBag.Title</title>

    @RenderSection("head", required: false)
</head>
<body>
    <header role="banner">
        <div class="menu">
            <div class="container">
                <div class="row">
                    <div class="col-sm">
                        <!-- Mobile Menu -->
                        <nav class="navbar navbar-mobile navbar-toggleable-sm d-sm-block d-md-none">
                            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#mobileNavbar" aria-controls="mobileNavbar" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon">&#9776;</span>
                            </button>
                            <div class="collapse navbar-collapse" id="mobileNavbar">
                                <div class="navbar-nav">
                                    <a class="nav-item nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                    <a class="nav-item nav-link active" asp-area="" asp-controller="CustomerSecure" asp-action="Index">Account</a>
                                    <a class="nav-item nav-link active" asp-area="" asp-controller="VaultSecure" asp-action="Index">Vaults</a>
                                    <a class="nav-item nav-link active" asp-area="" asp-controller="PurchaseSecure" asp-action="Index">Purchase</a>
                                    <a class="nav-item nav-link active" asp-area="" asp-controller="ContactSecure" asp-action="Index">Contact</a>
                                    @await Html.PartialAsync("_LoginPartial")
                                </div>
                            </div>
                        </nav>
                        <!-- Desktop menu -->
                        <nav class="navbar d-none d-md-block">
                            <ul class="justify-content-center nav">
                                <li class="nav-item">
                                    <a class="nav-item nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-item nav-link active" asp-area="" asp-controller="CustomerSecure" asp-action="Index">Account</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-item nav-link active" asp-area="" asp-controller="VaultSecure" asp-action="Index">Vaults</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-item nav-link active" asp-area="" asp-controller="PurchaseSecure" asp-action="Index">Purchase</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-item nav-link active" asp-area="" asp-controller="ContactSecure" asp-action="Index">Contact</a>
                                </li>
                                @await Html.PartialAsync("_LoginPartial")
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="main-body" style="padding:10px 10px 10px 10px">
        @RenderBody()

        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-sm-6">
                        Copyright &copy; 2020 SafeHaven
                    </div>
                    <div class="col-sm-6 text-right">
                        @await Html.PartialAsync("_SelectLanguagePartial")
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    @*@RenderSection("script", required: false)*@
    @RenderSection("scripts", required: false)
</body>
</html>