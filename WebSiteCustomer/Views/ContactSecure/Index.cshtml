@model WebDataLayer.Models.ContactSecureData
@{
    ViewData["Title"] = "Index";
}

<div class="container body-container">
    <div class="row justify-content-center">
        <form method="post">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <label>Enter your question, suggestion, or comments</label>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        @Html.TextAreaFor(m => m.Question, htmlAttributes: new { @class = "form-control", rows = "10", cols = "75%" })
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <label style="color:red">@Model.Response</label>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

